{
  "name": "livecode2",
  "displayName": "livecode2 for python",
  "description": "Real-time python variable evaluation (space_tracer driven)",
  "version": "1.4.0",
  "publisher": "xirider",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [
    "onCommand:livecode2.currentSession",
    "onCommand:livecode2.newSession",
    "onCommand:livecode2.newSessionOnHighlightedCode"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == python && !livecode2 && editorHasSelection && config.livecode2.showIcons",
          "command": "livecode2.newSession",
          "alt": "livecode2.currentSession",
          "group": "navigation"
        },
        {
          "when": "editorLangId == python && !livecode2 && !editorHasSelection && config.livecode2.showIcons",
          "command": "livecode2.currentSession",
          "alt": "livecode2.newSession",
          "group": "navigation"
        },
        {
          "when": "livecode2 && config.livecode2.showIcons",
          "command": "livecode2.close",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "livecode2.currentSession"
        },
        {
          "command": "livecode2.newSession"
        }
      ],
      "editor/context": [
        {
          "command": "livecode2.newSessionOnHighlightedCode",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "livecode2 configuration",
      "properties": {
        "livecode2.showIcons": {
          "type": "boolean",
          "default": true
        },
        "livecode2.skipLandingPage": {
          "type": "boolean",
          "default": false
        },
        "livecode2.showFooter": {
          "type": "boolean",
          "default": true
        },
        "livecode2.customCSS": {
          "type": "string",
          "default": null,
          "description": "injected into livecode2 each run. Use 'Developer: Open Webview Developer Tools' command to inspect livecode2 html"
        },
        "livecode2.delay": {
          "type": "number",
          "default": 300,
          "description": "delay in milliseconds before executing code after typing"
        },
        "livecode2.restartDelay": {
          "type": "number",
          "default": 300,
          "description": "when restart mode is active we add this to delay to delay longer"
        },
        "livecode2.inlineResults": {
          "type": "boolean",
          "default": false,
          "description": "whether to show errors / results / prints inline. (Currently just error icons)"
        },
        "livecode2.pyGuiLibraries": {
          "type": "array",
          "default": [
            "matplotlib",
            "tkinter",
            "kivy",
            "pyforms",
            "PyQt4",
            "PyQt5",
            "wx",
            "pyside",
            "plotly",
            "ggplot",
            "bokeh",
            "ppb",
            "PySimpleGUI",
            "pyglet"
          ],
          "description": "livecode2 enters restart mode when one of these libraries are imported. Process is restarted at end of each run so GUI window is updated"
        },
        "livecode2.whenToExecute": {
          "type": "string",
          "enum": [
            "afterDelay",
            "onSave",
            "onKeybinding"
          ],
          "enumDescriptions": [
            "after a delay (change livecode2.delay to control the amount)",
            "on save",
            "on keyboard shortcut"
          ],
          "default": "afterDelay",
          "description": "When to execute your code"
        },
        "livecode2.show_to_level": {
          "type": "number",
          "default": 5,
          "description": "2 shows x=1 and x=[1,2], provides option to expand deeply nested data like x=[[1]]"
        },
        "livecode2.max_string_length": {
          "type": "number",
          "default": 70,
          "description": "strings over X characters are truncated with an option to expand"
        },
        "livecode2.printResultPlacement": {
          "type": "string",
          "enum": [
            "top",
            "bottom"
          ],
          "enumDescriptions": [
            "print results appear on top",
            "print results appear on bottom"
          ],
          "default": "bottom"
        },
        "livecode2.pythonPath": {
          "type": "string",
          "default": null,
          "description": "livecode2 uses the path you have defined in the official python extension. If not present then this setting will be used. If this setting is also empty then on windows py will be used, or python3 otherwise"
        },
        "livecode2.envFile": {
          "type": "string",
          "default": null,
          "description": "Absolute path to a file containing environment variable definitions. If not set the setting from the python extension will be used, or ${workspaceFolder}/.env if the python extension is not installed"
        },
        "livecode2.pythonOptions": {
          "type": "array",
          "default": [
            "-u"
          ],
          "description": "default -u to see prints in real-time. See https://docs.python.org/3/using/cmdline.html#miscellaneous-options for other options. Changing this setting not reccomended"
        },
        "livecode2.defaultFilterVars": {
          "type": "array",
          "default": [],
          "description": "Any variables with these names are not shown in livecode2 variable view."
        },
        "livecode2.defaultFilterTypes": {
          "type": "array",
          "default": [
            "<class 'module'>",
            "<class 'function'>"
          ],
          "description": "Any variables with these types are not shown in livecode2 variable view."
        },
        "livecode2.defaultImports": {
          "type": "array",
          "default": [
            ""
          ],
          "description": "Default imports for new livecode2 sessions. "
        },
        "livecode2.unsafeKeywords": {
          "type": "array",
          "default": [
            "rmdir\\(",
            "rmtree\\("
          ],
          "description": "livecode2 will not evaulate your code in real-time mode if one of these keywords are detected. Keywords are applied via regex."
        },
        "livecode2.telemetry": {
          "type": "boolean",
          "default": true,
          "description": "Whether to report useful anonymous data back to developer."
        },
        "livecode2.showSyntaxErrors": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show syntax errors."
        },
        "livecode2.showNameErrors": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show name errors."
        },
        "livecode2.showGlobalVars": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show global vars. Potential speed improvement if turned off - you can still inspect vars with dump()"
        },
        "livecode2.shell_plus": {
          "type": "boolean",
          "default": false,
          "description": "Whether to automatically load django models. This setting doesn't actually do anything yet. See https://github.com/Almenon/livecode-vscode/issues/279"
        },
        "livecode2.keepPreviousVars": {
          "type": "boolean",
          "default": false,
          "description": "If set to true livecode will add onto the local state each run instead of clearing it and starting fresh."
        }
      }
    },
    "commands": [
      {
        "command": "livecode2.currentSession",
        "title": "livecode2: eval python in real time (current doc)",
        "category": "livecode2",
        "icon": "./media/livecode-activate.png"
      },
      {
        "command": "livecode2.newSession",
        "title": "livecode2: eval python in real time (new doc)",
        "category": "livecode2",
        "icon": "./media/livecode-activate.png"
      },
      {
        "command": "livecode2.close",
        "title": "closes livecode2",
        "category": "livecode2",
        "icon": "./media/livecode-stop.png"
      },
      {
        "command": "livecode2.newSessionOnHighlightedCode",
        "title": "open highlighted code in new livecode2 session",
        "category": "livecode2"
      },
      {
        "command": "livecode2.execute",
        "title": "trigger a run in the current livecode2 session",
        "category": "livecode2"
      },
      {
        "command": "livecode2.executeBlock",
        "title": "execute the current block of code",
        "category": "livecode2"
      }
    ],
    "keybindings": [
      {
        "command": "livecode2.currentSession",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "!inQuickOpen && !terminalFocus"
      },
      {
        "command": "livecode2.newSession",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+r",
        "when": "!inQuickOpen && !terminalFocus"
      },
      {
        "command": "livecode2.execute",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "!inQuickOpen && !terminalFocus && editorLangId == python"
      },
      {
        "command": "livecode2.executeBlock",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "livecode2.printDir",
        "key": "alt+enter",
        "mac": "alt+enter",
        "when": "editorTextFocus && editorLangId == python"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "compileOnce": "tsc -p ./",
    "test": "tsc -p ./ && node ./out/test/runTest.js",
    "unitTests": "mocha -ui tdd -r ts-node/register test/*.spec.ts",
    "visualize": "depcruise --exclude 'vscode|^[a-zA-Z0-9\\_]+$' --output-type dot src | dot -T svg > dependencygraph.svg"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.5.2",
    "@types/vscode": "^1.31.0",
    "decache": "^4.4.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "arepl-backend": "^1.3.8",
    "opn": "^5.3.0",
    "path": "^0.12.7",
    "vscode-extension-telemetry": "0.1.2"
  },
  "bugs": {
    "url": "https://github.com/xirider/livecode/issues",
    "email": ""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xirider/livecode.git"
  },
  "license": "SEE LICENSE IN <filename>",
  "keywords": [
    "python",
    "real-time",
    "display",
    "variable",
    "explorer"
  ],
  "icon": "media/livecode-store.png",
  "volta": {
    "node": "10.24.1"
  }
}
