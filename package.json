{
  "name": "live-coding",
  "displayName": "live coding for python",
  "description": "Real-time python evaluation (space_tracer driven)",
  "version": "3.0.0",
  "publisher": "wuhy",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [
    "onCommand:live-coding.currentSession",
    "onCommand:live-coding.newSession",
    "onCommand:live-coding.newSessionOnHighlightedCode"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == python && !live-coding && editorHasSelection && config.live-coding.showIcons",
          "command": "live-coding.newSession",
          "alt": "live-coding.currentSession",
          "group": "navigation"
        },
        {
          "when": "editorLangId == python && !live-coding && !editorHasSelection && config.live-coding.showIcons",
          "command": "live-coding.currentSession",
          "alt": "live-coding.newSession",
          "group": "navigation"
        },
        {
          "when": "live-coding && config.live-coding.showIcons",
          "command": "live-coding.close",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "live-coding.currentSession"
        },
        {
          "command": "live-coding.newSession"
        }
      ],
      "editor/context": [
        {
          "command": "live-coding.newSessionOnHighlightedCode",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "live-coding configuration",
      "properties": {
        "live-coding.showIcons": {
          "type": "boolean",
          "default": true
        },
        "live-coding.skipLandingPage": {
          "type": "boolean",
          "default": false
        },
        "live-coding.showFooter": {
          "type": "boolean",
          "default": true
        },
        "live-coding.customCSS": {
          "type": "string",
          "default": null,
          "description": "injected into live-coding each run. Use 'Developer: Open Webview Developer Tools' command to inspect live-coding html"
        },
        "live-coding.delay": {
          "type": "number",
          "default": 300,
          "description": "delay in milliseconds before executing code after typing"
        },
        "live-coding.restartDelay": {
          "type": "number",
          "default": 300,
          "description": "when restart mode is active we add this to delay to delay longer"
        },
        "live-coding.inlineResults": {
          "type": "boolean",
          "default": false,
          "description": "whether to show errors / results / prints inline. (Currently just error icons)"
        },
        "live-coding.pyGuiLibraries": {
          "type": "array",
          "default": [
            "matplotlib",
            "tkinter",
            "kivy",
            "pyforms",
            "PyQt4",
            "PyQt5",
            "wx",
            "pyside",
            "plotly",
            "ggplot",
            "bokeh",
            "ppb",
            "PySimpleGUI",
            "pyglet"
          ],
          "description": "live-coding enters restart mode when one of these libraries are imported. Process is restarted at end of each run so GUI window is updated"
        },
        "live-coding.whenToExecute": {
          "type": "string",
          "enum": [
            "afterDelay",
            "onSave",
            "onKeybinding"
          ],
          "enumDescriptions": [
            "after a delay (change live-coding.delay to control the amount)",
            "on save",
            "on keyboard shortcut"
          ],
          "default": "afterDelay",
          "description": "When to execute your code"
        },
        "live-coding.show_to_level": {
          "type": "number",
          "default": 5,
          "description": "2 shows x=1 and x=[1,2], provides option to expand deeply nested data like x=[[1]]"
        },
        "live-coding.max_string_length": {
          "type": "number",
          "default": 70,
          "description": "strings over X characters are truncated with an option to expand"
        },
        "live-coding.printResultPlacement": {
          "type": "string",
          "enum": [
            "top",
            "bottom"
          ],
          "enumDescriptions": [
            "print results appear on top",
            "print results appear on bottom"
          ],
          "default": "bottom"
        },
        "live-coding.pythonPath": {
          "type": "string",
          "default": null,
          "description": "live-coding uses the path you have defined in the official python extension. If not present then this setting will be used. If this setting is also empty then on windows py will be used, or python3 otherwise"
        },
        "live-coding.envFile": {
          "type": "string",
          "default": null,
          "description": "Absolute path to a file containing environment variable definitions. If not set the setting from the python extension will be used, or ${workspaceFolder}/.env if the python extension is not installed"
        },
        "live-coding.pythonOptions": {
          "type": "array",
          "default": [
            "-u"
          ],
          "description": "default -u to see prints in real-time. See https://docs.python.org/3/using/cmdline.html#miscellaneous-options for other options. Changing this setting not reccomended"
        },
        "live-coding.defaultFilterVars": {
          "type": "array",
          "default": [],
          "description": "Any variables with these names are not shown in live-coding variable view."
        },
        "live-coding.defaultFilterTypes": {
          "type": "array",
          "default": [
            "<class 'module'>",
            "<class 'function'>"
          ],
          "description": "Any variables with these types are not shown in live-coding variable view."
        },
        "live-coding.defaultImports": {
          "type": "array",
          "default": [
            ""
          ],
          "description": "Default imports for new live-coding sessions. "
        },
        "live-coding.unsafeKeywords": {
          "type": "array",
          "default": [
            "rmdir\\(",
            "rmtree\\("
          ],
          "description": "live-coding will not evaulate your code in real-time mode if one of these keywords are detected. Keywords are applied via regex."
        },
        "live-coding.telemetry": {
          "type": "boolean",
          "default": true,
          "description": "Whether to report useful anonymous data back to developer."
        },
        "live-coding.showSyntaxErrors": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show syntax errors."
        },
        "live-coding.showNameErrors": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show name errors."
        },
        "live-coding.showGlobalVars": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show global vars. Potential speed improvement if turned off - you can still inspect vars with dump()"
        },
        "live-coding.shell_plus": {
          "type": "boolean",
          "default": false,
          "description": "Whether to automatically load django models. This setting doesn't actually do anything yet. See https://github.com/Almenon/livecode-vscode/issues/279"
        },
        "live-coding.keepPreviousVars": {
          "type": "boolean",
          "default": false,
          "description": "If set to true livecode will add onto the local state each run instead of clearing it and starting fresh."
        }
      }
    },
    "commands": [
      {
        "command": "live-coding.currentSession",
        "title": "live-coding: eval python in real time (current doc)",
        "category": "live-coding",
        "icon": "./media/livecode-activate.png"
      },
      {
        "command": "live-coding.newSession",
        "title": "live-coding: eval python in real time (new doc)",
        "category": "live-coding",
        "icon": "./media/livecode-activate.png"
      },
      {
        "command": "live-coding.close",
        "title": "closes live-coding",
        "category": "live-coding",
        "icon": "./media/livecode-stop.png"
      },
      {
        "command": "live-coding.newSessionOnHighlightedCode",
        "title": "open highlighted code in new live-coding session",
        "category": "live-coding"
      },
      {
        "command": "live-coding.execute",
        "title": "trigger a run in the current live-coding session",
        "category": "live-coding"
      },
      {
        "command": "live-coding.executeBlock",
        "title": "execute the current block of code",
        "category": "live-coding"
      }
    ],
    "keybindings": [
      {
        "command": "live-coding.currentSession",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "!inQuickOpen && !terminalFocus"
      },
      {
        "command": "live-coding.newSession",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+r",
        "when": "!inQuickOpen && !terminalFocus"
      },
      {
        "command": "live-coding.execute",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "!inQuickOpen && !terminalFocus && editorLangId == python"
      },
      {
        "command": "live-coding.executeBlock",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == python"
      },
      {
        "command": "live-coding.printDir",
        "key": "alt+enter",
        "mac": "alt+enter",
        "when": "editorTextFocus && editorLangId == python"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "compileOnce": "tsc -p ./",
    "test": "tsc -p ./ && node ./out/test/runTest.js",
    "unitTests": "mocha -ui tdd -r ts-node/register test/*.spec.ts",
    "visualize": "depcruise --exclude 'vscode|^[a-zA-Z0-9\\_]+$' --output-type dot src | dot -T svg > dependencygraph.svg"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^7.2.3",
    "mocha": "^11.7.5",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "python-shell": "^1.0.8",
    "semver": "^7.7.3"
  },
  "bugs": {
    "url": "https://github.com/wuhongyewhy/LiveCoding/issues",
    "email": ""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wuhongyewhy/LiveCoding.git"
  },
  "license": "MIT",
  "keywords": [
    "python",
    "livecode",
    "live-coding",
    "beginner",
    "education",
    "real-time",
    "display",
    "variable"
  ],
  "icon": "media/livecode-store.png",
  "volta": {
    "node": "24.11.1"
  }
}