{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "moduleResolution": "node",
        "lib": ["ES2023"],
        "outDir": "out",
        "rootDir": ".",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "types": ["node", "mocha"]
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
